@prefix us: <https://smartcity.linkeddata.es/lcc/ontology/urban-sensors#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sosa: <http://www.w3.org/ns/sosa/> .
@prefix schema: <http://schema.org/> .
@prefix wgs84_pos: <http://www.w3.org/2003/01/geo/wgs84_pos#> .
@prefix rr: <http://www.w3.org/ns/r2rml#>.
@prefix rml: <http://semweb.mmlab.be/ns/rml#>.
@prefix ql: <http://semweb.mmlab.be/ns/ql#>.
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@base <https://smartcity.linkeddata.es/lcc/resource/> .

#################################################################
# Logical Source
#################################################################

<#PedestrianSource>
    a rml:LogicalSource ;
    rml:source "../csv/pedestrian-counting-system-sensor-locations-enriched-updated-with-links.csv" ;
    rml:referenceFormulation ql:CSV .

#################################################################
# Pedestrian Location Mapping
#################################################################

<#PedestrianLocation>
  a rr:TriplesMap ;
  rml:logicalSource <#PedestrianSource> ;

  rr:subjectMap [
    rr:template "https://smartcity.linkeddata.es/lcc/resource/location/{Location_ID}";
    rr:termType rr:IRI ;
    rr:class us:Location
  ];

  rr:predicateObjectMap [
    rr:predicate rdfs:comment ;
    rr:objectMap [ rml:reference "Location_Type"; rr:termType rr:Literal  ]
  ] ;

  rr:predicateObjectMap [
    rr:predicate wgs84_pos:lat ;
    rr:objectMap [ rml:reference "Latitude" ; rr:datatype xsd:float; rr:termType rr:Literal ]
  ] ;

  rr:predicateObjectMap [
    rr:predicate wgs84_pos:long ;
    rr:objectMap [ rml:reference "Longitude" ; rr:datatype xsd:float ; rr:termType rr:Literal ]
  ] ;

  rr:predicateObjectMap [
    rr:predicate schema:postalCode ;
    rr:objectMap [ rml:reference "Postcode"; rr:termType rr:Literal ]
  ] ;

  rr:predicateObjectMap [
    rr:predicate us:inAdministrativeArea ;
    rr:objectMap [
      rr:parentTriplesMap <#CityMapping> ;
      rr:joinCondition [
         rr:child "City";
         rr:parent "City";
      ]
    ]
  ] ;

  rr:predicateObjectMap [
    rr:predicate us:inAdministrativeArea;
    rr:objectMap [
      rr:parentTriplesMap <#CountryMapping> ;
      rr:joinCondition [
         rr:child "Country";
         rr:parent "Country";
      ]
    ]
  ] ;

  rr:predicateObjectMap [
    rr:predicate schema:streetAddress ;
    rr:objectMap [
      rr:template "{Street} {House_Number}" ;
      rr:termType rr:Literal
    ]
  ] ;
  
  rr:predicateObjectMap [
    rr:predicate us:hasStreet ;
    rr:objectMap [
      rr:parentTriplesMap <#StreetMapping> ;
      rr:joinCondition [
         rr:child "Street";
         rr:parent "Street";
      ]
    ]
  ] ;

  rr:predicateObjectMap [
    rr:predicate us:MicroclimateSensor ;
    rr:objectMap [ rml:reference "Closest_Microclimate_Sensor_Name" ; rr:termType rr:Literal ]
  ] .

#################################################################
# Pedestrian Sensor Mapping
#################################################################

<#PedestrianSensor> 
  a rr:TriplesMap ;
  rml:logicalSource <#PedestrianSource> ;

  rr:subjectMap [
    rml:template "https://smartcity.linkeddata.es/lcc/resource/sensor/{Sensor_Name}";
    rr:termType rr:IRI ;
    rr:class us:PedestrianSensor
  ] ;

  rr:predicateObjectMap [
    rr:predicate schema:description ;
    rr:objectMap [ rml:reference "Sensor_Description" ; rr:termType rr:Literal ]
  ] ;

  rr:predicateObjectMap [
    rr:predicate schema:dateInstalled ;
    rr:objectMap [ rml:reference "Installation_Date" ; rr:datatype xsd:date ; rr:termType rr:Literal]
  ] ;

  rr:predicateObjectMap [
    rr:predicate rdfs:comment ;
    rr:objectMap [ rml:reference "Note" ; rr:termType rr:Literal]
  ] ;

  rr:predicateObjectMap [
    rr:predicate schema:status ;
    rr:objectMap [ rml:reference "Status" ; rr:termType rr:Literal]
  ] ;

  rr:predicateObjectMap [
    rr:predicate us:direction1 ;
    rr:objectMap [ rml:reference "Direction_1" ; rr:termType rr:Literal]
  ] ;

  rr:predicateObjectMap [
    rr:predicate us:direction2 ;
    rr:objectMap [ rml:reference "Direction_2" ; rr:termType rr:Literal]
  ] ;

  rr:predicateObjectMap [
    rr:predicate us:locatedAt ;
    rr:objectMap [
      rr:parentTriplesMap <#PedestrianLocation> ;
      # No joinCondition needed here assuming sensors and locations
      # are processed row by row from the same source.
      # If they were from different sources, a join on Location_ID would be needed.
    ] ;
  ] .

#################################################################
# Subjects for reconciliation
#################################################################

<#CityMapping> 
  a rr:TriplesMap ;
  rml:logicalSource <#PedestrianSource> ;

  rr:subjectMap [
    rr:template "https://smartcity.linkeddata.es/lcc/resource/city/{City}";
    rr:class schema:City # schema:City is a subclass of schema:AdministrativeArea
  ];
  rr:predicateObjectMap [
    rr:predicate rdfs:label;
    rr:objectMap [ rml:reference "City" ; rr:termType rr:Literal ]
  ];
  rr:predicateObjectMap [
    rr:predicate owl:sameAs;
    rr:objectMap [ rml:reference "Same_As_Wikidata_City"; rr:termType rr:IRI ]
  ].

<#CountryMapping> 
  a rr:TriplesMap ;
  rml:logicalSource <#PedestrianSource> ;

  rr:subjectMap [
    rr:template "https://smartcity.linkeddata.es/lcc/resource/country/{Country}";
    rr:class schema:Country # schema:Country is a subclass of schema:AdministrativeArea
  ];
  rr:predicateObjectMap [
    rr:predicate rdfs:label;
    rr:objectMap [ rml:reference "Country" ; rr:termType rr:Literal ]
  ];
  rr:predicateObjectMap [
    rr:predicate owl:sameAs;
    rr:objectMap [ rml:reference "Same_As_Wikidata_Country"; rr:termType rr:IRI ]
  ].

<#StreetMapping> 
  a rr:TriplesMap ;
  rml:logicalSource <#PedestrianSource> ;
  
  rr:subjectMap [
    rr:template "https://smartcity.linkeddata.es/lcc/resource/street/{Street}";
    rr:class schema:PostalAddress # This is the range of us:hasStreet
  ];
  rr:predicateObjectMap [
    rr:predicate schema:streetAddress;
    rr:objectMap [ rml:reference "Street" ; rr:termType rr:Literal ]
  ];
  rr:predicateObjectMap [
    rr:predicate owl:sameAs;
    rr:objectMap [ rml:reference "Same_As_Wikidata_Street"; rr:termType rr:IRI ]
  ].


