#######################################################################
# TriplesMap: District  (links to City)
#######################################################################

<#TriplesMap_District> a rr:TriplesMap ;
  rml:logicalSource [
    rml:source "CSV/ELADESTELLEOGD-updated.csv" ;
    rml:referenceFormulation ql:CSV
  ] ;

  rr:subjectMap [
    rr:template "https://iamabsa.github.io/resource/District#{CITY}-{BEZIRK}" ;
    rr:class co:District
  ] ;
  
  rr:predicateObjectMap [
    rr:predicate rdfs:label ;
    rr:objectMap [ rml:reference "BEZIRK" ]
  ] ;

  rr:predicateObjectMap [
    rr:predicate co:districtCity ;
    rr:objectMap [
      rr:template "https://iamabsa.github.io/resource/City#{CITY}" ;
      rr:termType rr:IRI
    ]
  ] .

